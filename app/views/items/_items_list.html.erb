<div class="row" id="items_div">
              <% items.each do |item| %>
                <div class="col-sm-3">
                  <div class="panel">
                    <div class="panel-heading"><%= item.name %></div>
                    <div class="panel-body"><img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image"></div>
                    <div class="panel-footer"><%= item.description %></div><br>
                    <div class="text-center"><%= item.user.name %></div><br>
                    <div class="text-center"><%= link_to 'Borrow',  new_rental_path(:user_id => current_user.id , :item_id => item.id), class:'btn btn-default' %> | 
                    <% if current_user && item.user == current_user %>
                    <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></div><br>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>